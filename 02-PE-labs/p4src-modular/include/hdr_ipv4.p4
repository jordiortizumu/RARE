#ifndef _IPV4_P4_
#define _IPV4_P4_

header ipv4_t {
   bit<4>    version;
   bit<4>    ihl;
   bit<8>    diffserv;
   bit<16>   total_len;
   bit<16>   identification;
   bit<3>    flags;
   bit<13>   frag_offset;
   bit<8>    ttl;
   bit<8>    protocol;
   bit<16>   hdr_checksum;
   ipv4_addr_t src_ipv4_addr;
   ipv4_addr_t dst_ipv4_addr;
}

#endif // _IPV4_P4_
